<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2a0d5b;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ShowProduitDetails">

    <VBox alignment="CENTER" layoutX="150" layoutY="100" prefHeight="200" prefWidth="300" spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-color: #04010a; -fx-border-width: 2px; -fx-border-radius: 10px;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Product Details" />
        <Label fx:id="productNameLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="priceLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="descriptionLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="stockLabel" style="-fx-text-fill: #800080;" />
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleEdit" style="-fx-background-color: #ff0000; -fx-text-fill: white;" text="Edit" />
            <Button onAction="#handleDelete" style="-fx-background-color: #2a0d5b; -fx-text-fill: white;" text="Delete" />
        </HBox>
    </VBox>
</AnchorPane>
